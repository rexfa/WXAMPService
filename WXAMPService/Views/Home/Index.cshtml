@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <p>@ViewData["Dir0"]</p>
    <p>@ViewData["Dir1"]</p>
    <p>@ViewData["Dir2"]</p>
    <p>@ViewData["Dir3"]</p>
</div>

<div>
    <input type="text" name="username" id="username" /><br />
    <input type="text" name="wxid" id="wxid" /><br />
    <input type="text" name="userinfo" id="userinfo" /><br />
    <input type="text" name="message" id="message" /><br />
    <input type="file" name="uploadFile" id="uploadFile" /><br />
    <button id="submit">上传</button>
</div>

@section scripts{
    <script type="text/javascript">

$('#submit').on('click', function (e) {
    e.preventDefault();
    var files = document.getElementById('uploadFile').files;
    var messageText = document.getElementById('message');
    var message0 = messageText.value;
    var formData = new FormData();
    formData.append("message", message0);
    if (files.length > 0) {
        if (window.FormData !== undefined) {
            for (var x = 0; x < files.length; x++) {
                formData.append("file" + x, files[x]);
            };    
            $.ajax({
                type: "POST",
                url: '/api/FileUploadAPI',
                contentType: false,
                processData: false,
                dataType: "json",
                data: formData,
                success: function (result) {
                    console.log(result.message);
                    alert(result.message+" : "+result.filePath + " - " +result.size);
                },
                error: function (xhr, status, p3) {
                    console.log(status);
                    alert(status);
                 }
            });
        } else {
            alert("浏览器不支持加载HTML5文件！");
        }
    }
 });
    </script>
}
